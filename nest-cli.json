{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/api-gateway-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway-service",
  "projects": {
    "api-gateway-service": {
      "type": "application",
      "root": "apps/api-gateway-service",
      "entryFile": "main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway-service/tsconfig.app.json",
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "repository-service": {
      "type": "application",
      "root": "apps/repository-service/src",
      "entryFile": "main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/repository-service/tsconfig.app.json",
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}